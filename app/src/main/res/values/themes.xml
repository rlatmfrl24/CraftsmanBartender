<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CraftsmanBartender" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_300</item>
        <item name="colorPrimaryVariant">@color/orange_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_400</item>
        <item name="colorSecondaryVariant">@color/red_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.CraftsmanBartender.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>

    <style name="Theme.CraftsmanBartender.ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.CraftsmanBartender.MainButton">
        <item name="fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.CraftsmanBartender.RecipeDetailTextAppearance">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/spoqa_han_sans_bold</item>
    </style>

    <style name="Theme.CraftsmanBartender.RecipeDetailHeaderTextAppearance">
        <item name="fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CraftsmanBartender.MockTestRecipeTextAppearance">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">32sp</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

</resources>